<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.addentry_select_form"
    android:background="@drawable/addentryselectform">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aladin"
                android:paddingLeft="15dp"
                android:text="SELECT FORM"
                android:textColor="@color/colorBlue"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radiocoachingform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COACHING FORM" />

                <RadioButton
                    android:id="@+id/radiocheckandactform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHECK AND ACT FORM" />

                <Button
                    android:id="@+id/radiogetvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT"/>


            </RadioGroup>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>